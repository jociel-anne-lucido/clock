<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"

        android:src="@drawable/back"></ImageView>
    <TextView
        android:id="@+id/return_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Return"
        android:textSize="17dp"
        android:layout_toRightOf="@id/back"
        android:textColor="@color/subtitle"></TextView>
    <TextView
        android:id="@+id/sleep_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/arial_mt_rounded"
        android:text="If you go to sleep now, "
        android:textColor="@color/heading"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/wakeup_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/arial_mt_rounded"
        android:text="You should wake up at:"
        android:textColor="@color/heading"
        android:textSize="18sp"
        android:layout_below="@id/sleep_txt"></TextView>
    <TextView
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wakeup_txt"
        android:layout_marginTop="30dp"></TextView>
    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time1"
        android:layout_marginTop="30dp"></TextView>
    <TextView
        android:id="@+id/time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time2"
        android:layout_marginTop="30dp"></TextView>
    <TextView
        android:id="@+id/time4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time3"
        android:layout_marginTop="30dp"></TextView>
    <TextView
        android:id="@+id/time5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time4"
        android:layout_marginTop="30dp"></TextView>


</RelativeLayout>